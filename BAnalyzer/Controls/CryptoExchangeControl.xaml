<UserControl x:Class="BAnalyzer.Controls.CryptoExchangeControl"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                 xmlns:bAnalyzer="clr-namespace:BAnalyzer"
                 xmlns:controls="clr-namespace:BAnalyzer.Controls"
                 mc:Ignorable="d" 
                 d:DesignHeight="450" d:DesignWidth="800" Name="Ui">
    <Grid DataContext= "{Binding ElementName = Ui}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Horizontal">
            <ComboBox ItemsSource= "{Binding Symbols, UpdateSourceTrigger=PropertyChanged}"
                      SelectedIndex="0" SelectedItem="{Binding SelectedSymbol}" IsEditable="True"
                      Margin="30, 5, 5, 5" Width="100" PreviewTextInput="UIElement_OnPreviewTextInput"/>
            <ComboBox ItemsSource= "{Binding AvailableTimeIntervals, UpdateSourceTrigger=PropertyChanged}"
                      SelectedIndex="0" SelectedItem="{Binding CurrentTimeInterval}" Margin="5" Width="110"/>
            <TextBlock Margin="5" Width="250">
                <TextBlock.Inlines>
                    <Run FontWeight="Bold" FontSize="16" Text="Spot Price (USDT): "/>
                    <Run FontWeight="Bold" FontSize="16"
                         Foreground="{Binding PriceColor, Mode=OneWay}"
                         Text="{Binding Price, Mode=OneWay}"/>
                </TextBlock.Inlines>
            </TextBlock>
        </StackPanel>
        <TabControl Grid.Column="1" Grid.Row="1" Margin="2">
            <TabItem Header="Chart">
                <controls:ExchangeChartControl  x:Name ="Chart"/>
            </TabItem>
            <TabItem Header="Orders">
                <controls:ExchangeOrdersControl x:Name="Orders"/>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
